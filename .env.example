# Port number
PORT=3000

# URL of the Mongo DB (Use MongoDB Atlas for Vercel deployment)
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true

# JWT
# JWT secret key (IMPORTANT: Change this in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
# Number of minutes after which an access token expires
JWT_ACCESS_EXPIRATION_MINUTES=30
# Number of days after which a refresh token expires
JWT_REFRESH_EXPIRATION_DAYS=30
# Number of minutes after which a reset password token expires
JWT_RESET_PASSWORD_EXPIRATION_MINUTES=10
# Number of minutes after which a verify email token expires
JWT_VERIFY_EMAIL_EXPIRATION_MINUTES=60

# SMTP configuration options for the email service
# For production, use a reliable SMTP service like SendGrid, Mailgun, or Zoho
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=noreply@yourdomain.com

# Socket.io client URL (for CORS) - Set to your frontend domain
SOCKET_CLIENT=https://yourdomain.com

# Web Push Notifications (Generate your own VAPID keys)
VAP_ID_PRIVATE_KEY=your-private-vapid-key
VAP_ID_PUBLIC_KEY=your-public-vapid-key
VAP_ID_SUBJECT=mailto:your-email@domain.com

# AWS S3 Configuration (for file uploads)
AWS_BUCKET_NAME=your-bucket-name
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Google OAuth (Optional - for Google authentication)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Node Environment (set to 'production' for Vercel)
NODE_ENV=production

{
    "version": 2,
    "builds": [
        {
            "src": "api/index.js",
            "use": "@vercel/node@3",
            "config": {
                "maxLambdaSize": "50mb"
            }
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/public/(.*)",
            "dest": "/public/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.js"
        }
    ]
}